#!/usr/bin/env python3

import sys
import argparse
from fqlib.fqwriter import FastQWriter

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="Generate FastQ files")
    parser.add_argument(
        "--read-one-filename",
        required=True,
        type=str,
        help="FastQ file containing all R1 reads."
    )
    parser.add_argument(
        "--read-two-filename",
        required=True,
        type=str,
        help="FastQ file containing all R2 reads."
    )
    parser.add_argument(
        "-n",
        "--num-reads",
        help="Number of reads to generate",
        type=int,
        default=10000
    )

    args = parser.parse_args()

    read_one_writer = FastQWriter(args.read_one_filename, "/1")
    read_two_writer = FastQWriter(args.read_two_filename, "/2")

    read_one_writer.generate(args.num_reads)
    read_two_writer.generate(args.num_reads)
